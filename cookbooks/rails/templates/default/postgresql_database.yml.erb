development: &defaults
  adapter: postgresql
  database: <%= node[:rails][:app_name] %>_dev
  username: <%= node[:rails][:db_user] %>
  password: <%= node[:rails][:db_pass] %>
  host: 127.0.0.1

test:
  <<: *defaults
  database: <%= node[:rails][:app_name] %>_test

production:
  <<: *defaults
  database: <%= node[:rails][:app_name] %>
