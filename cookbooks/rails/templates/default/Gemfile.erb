source "http://rubygems.org"
gem "<%= @db_gem %>"
gem "rails", "<%= node[:rails][:version] %>"
gem "haml"
gem "rails3-generators"

<% if node[:rails][:version] >= "3.1.0" %>
gem 'jquery-rails'
gem 'therubyracer'

group :assets do
  gem 'sass-rails', "~> <%= node[:rails][:version] %>"
#  gem 'coffee-rails', "~> <%= node[:rails][:version] %>"
  gem 'uglifier'
end
<% end %>

group :development do
  gem "rspec-rails"
end

group :test do
  gem "rspec"
  gem "rspec-rails"
  gem "capybara"
  gem "launchy"
  gem "factory_girl"
  gem "mocha"
end
